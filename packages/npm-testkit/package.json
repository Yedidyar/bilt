  },
  "dependencies": {
    "@bilt/scripting-commons": "^2.0.10",
    "debug": "^4.3.4",
    "get-port": "^6.1.2",
    "npm-registry-client": "^8.6.0",
    "verdaccio": "^5.10.1"
  },
  "devDependencies": {
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
